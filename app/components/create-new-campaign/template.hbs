<form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Create A New Campaign</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Name</label>
  <div class="col-md-5">
    {{input type="text" value=newCampaign.name placeholder="Campaign Name" class="form-control input-md" required=""}}
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="Type">Type</label>
  <div class="col-md-5">
    {{input type="text" value=newCampaign.type placeholder="Campaign Type" class="form-control input-md"}}
  <span class="help-block">Conquest, Marketing Database, Ect.</span>
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Deployment Date</label>
  <div class="col-md-5">
    {{input type="date" value=newCampaign.deploymentDate placeholder="Expected deployment date" class="form-control input-md"}}
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">File Delivery Date</label>
  <div class="col-md-5">
    {{input type="date" value=newCampaign.fileDeliveryDate placeholder="Expected file delivery date" class="form-control input-md"}}
  </div>
</div>

<!-- Button -->
<div class="form-group">
    <label class="col-md-4 control-label"></label>
  <div class="col-md-5">
    <button {{action "createCampaign" newCampaign}} class="btn btn-success createCampaign">Create New Campaign</button>
  </div>
</div>

</fieldset>
</form>

{{yield}}
